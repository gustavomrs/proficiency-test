<div class="row">
	<div class="col-md-4">
		<%= form_for @course do |c| %>
			<div class="form-group">

				<label for="name">
					<%= Course.human_attribute_name(:name) %>
				</label>
				<%= c.text_field :name, class: "form-control" %>
			</div>
			<div class="form-group">

				<label for="registerNumber">
					<%= Course.human_attribute_name(:description) %>
				</label>
				<%= c.text_area :description, class: "form-control" %>
			</div>
			<div class="form-group">

				<label for="registerNumber">
				<%= Course.human_attribute_name(:status) %>
				</label>
				<%= c.text_field :status, class: "form-control" %>
			</div>
			<%= c.submit %>
		<% end %>
	</div>
	<div class="col-md-4">
	</div>
	<div class="col-md-4">
	</div>
</div>
